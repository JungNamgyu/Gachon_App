<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:showIn="@layout/activity_main">


    <ImageView
        android:id="@+id/gachon_logo"
        android:layout_width="330dp"
        android:layout_height="100dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="132dp"
        app:layout_constraintBottom_toTopOf="@+id/Main_club"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/gachon_logo"
        tools:srcCompat="@drawable/gachon_logo" />

    <ImageButton
        android:id="@+id/Main_club"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/button_background"
        android:scaleType="fitCenter"
        android:src="@drawable/main_club"
        app:layout_constraintEnd_toStartOf="@+id/Sub_club"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gachon_logo" />

    <ImageButton
        android:id="@+id/Sub_club"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="80dp"
        android:background="@drawable/button_background"
        android:scaleType="fitCenter"
        android:src="@drawable/sub_club"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Main_club"
        app:layout_constraintTop_toBottomOf="@+id/gachon_logo" />

    <ImageButton
        android:id="@+id/Notice"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/button_background"
        android:scaleType="fitCenter"
        android:src="@drawable/notice"
        app:layout_constraintEnd_toStartOf="@+id/Information"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Main_club" />

    <ImageButton
        android:id="@+id/Information"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="80dp"
        android:background="@drawable/button_background"
        android:scaleType="fitCenter"
        android:src="@drawable/account"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Notice"
        app:layout_constraintTop_toBottomOf="@+id/Sub_club" />

    <Button
        android:id="@+id/Sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="80dp"
        android:background="#00FF0000"
        android:text="로그인"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/Notice"
        app:layout_constraintStart_toStartOf="@+id/Notice"
        app:layout_constraintTop_toBottomOf="@+id/Notice" />

    <Button
        android:id="@+id/Sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="80dp"
        android:background="#00FF0000"
        android:text="회원가입"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/Information"
        app:layout_constraintStart_toStartOf="@+id/Information"
        app:layout_constraintTop_toBottomOf="@+id/Information" />

</androidx.constraintlayout.widget.ConstraintLayout>