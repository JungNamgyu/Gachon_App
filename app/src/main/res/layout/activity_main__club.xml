<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#03A9F4"
    tools:context=".Main_Club">

    <TextView
        android:id="@+id/Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="중앙 동아리"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/SubView"
        android:layout_width="350dp"
        android:layout_height="600dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        android:background="#03A9F4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Title"
        app:srcCompat="@color/colorPrimary" />

    <ImageButton
        android:id="@+id/club1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:background="#03A9F4"
        app:layout_constraintStart_toStartOf="@+id/SubView"
        app:layout_constraintTop_toTopOf="@+id/SubView"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageButton
        android:id="@+id/club2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:background="#03A9F4"
        app:layout_constraintEnd_toEndOf="@+id/SubView"
        app:layout_constraintTop_toTopOf="@+id/SubView"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageButton
        android:id="@+id/club3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:background="#03A9F4"
        app:layout_constraintStart_toStartOf="@+id/SubView"
        app:layout_constraintTop_toBottomOf="@+id/club1"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageButton
        android:id="@+id/club4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="50dp"
        android:background="#03A9F4"
        app:layout_constraintEnd_toEndOf="@+id/SubView"
        app:layout_constraintTop_toBottomOf="@+id/club2"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageButton
        android:id="@+id/club5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:background="#03A9F4"
        app:layout_constraintStart_toStartOf="@+id/SubView"
        app:layout_constraintTop_toBottomOf="@+id/club3"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageButton
        android:id="@+id/club6"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="50dp"
        android:background="#03A9F4"
        app:layout_constraintEnd_toEndOf="@+id/SubView"
        app:layout_constraintTop_toBottomOf="@+id/club4"
        tools:srcCompat="@tools:sample/avatars" />

</androidx.constraintlayout.widget.ConstraintLayout>